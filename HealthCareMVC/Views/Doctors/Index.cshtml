@{
}
@model IEnumerable<DoctorViewModel>

<div class="col-md-5">
    <div class="col text-end">
    </div>
    <form asp-controller="Doctors" asp-action="index" method="get">
        <div class="input-group md-form form-control-sm form-2 p1-0">
            <input type="text" class="form-control my-0 py-1 red-border" placeholder="search" value="" aria-label="Search" name="PatientName" />
            <div class="input-group-append">
                <input type="submit" id="btnSubmit1" value="Search" class="btn btn-primary" />


            </div>


        </div>
    </form>




    <br />
    <h4>List of Doctors</h4>

    <table class="table table-bordered">
        <thead>
            <tr style="background-color:#37517e;">
                <th scope="col">User name</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.DoctorEmail</td>
                    <td><a asp-controller="Patients" asp-action="Details" asp-route-id="@item.DoctorId" class="btn btn-warning">Details</a></td>
                    <td><a asp-controller="Patients" asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-primary">Edit</a></td>
                    <td><a asp-controller="Patients" asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-danger">Delete</a></td>

                </tr>

            }
        </tbody>
    </table>

</div>